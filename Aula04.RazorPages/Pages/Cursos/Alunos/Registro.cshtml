@page
@model Aula04.RazorPages.Pages.Cursos.Alunos.Registro
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <div class = "form-group">
            <label for="curso">Curso:</label>
            <select class="form-control" name="curso" id="curso">
                @foreach (var cursoModel in Model.CursoList!)
                {
                    <option value="@cursoModel.IdCurso">@cursoModel.NomeCurso</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="aluno">Aluno:</label>
            <select class="form-control" name="aluno" id="aluno">
                @foreach (var alunoModel in Model.AlunoList!)
                {
                    <option value="@alunoModel.IdAluno">@alunoModel.NomeAluno</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Inscrever</button>
    </form>
</div>